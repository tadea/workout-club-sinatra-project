  <body>
    <h2><div class="nav_bar"></h2>
        <% if logged_in? %>
     
          <a href="/logout"><input type="submit" class="button" value="Logout"></a>
          <a href="/workouts/new"><input type="submit" class="button" value="Create New Workout"></a>
          <a href="/workouts"><input type="submit" class="button" value="All Workouts"></a> 
          <a href="/users/show"><input type="submit" class="button" value="Home"></a>
      <% end %>  
  
</div>

    <div class="wrapper">
      <% if flash[:message] %>
        <h4 style="color: blue; font-size: 23px;"><%= flash[:message] %></h4>
      <% end %>
      <% if flash[:error] %>
        <h4 style="color: red; font-size: 23px;"><%= flash[:error] %></h4>
      <% end %>
     


        <%= yield %>

      <footer class="branding">
        <small>&copy; 2018 <strong>WorkoutClubSinatraProject</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
